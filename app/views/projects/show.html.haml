- content_for(:stylesheet_includes) do
  = stylesheet_link_tag('projects')

%section
  %header
    %h2= @project.name
    = link_to 'Edit', edit_project_path(@project)
    = link_to 'Destroy', @project, :confirm => 'Are you sure?', :method => :delete

  .info
    .client= @project.client.name
    .active{ 'data-active' => @project.active }= @project.active ? t('.active') : t('.inactive')
    .users
      %h3 Team Members:
      %ul
        - if @project.users.any?
          - @project.users.each do |project_user|
            %li
              = image_tag project_user.gravatar
              = link_to "#{project_user.name} <#{project_user.email}>", project_user
        - else
          %li
            %em None!
        
